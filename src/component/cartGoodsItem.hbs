<div class="row">
    {{#each goodsBlock}}
    <div class="card col-12 my-2">
        <div class="card-body row">
            <img class="col-2 p-0" src="{{image}}" alt="{{name}}">
            <div class="col-4">
                <h5>{{name}}</h5>
                <p>{{description}}</p>
            </div>
            <div class="col-2">
                <p>{{price.title}}</p>
                <b>{{price.value}}</b>
            </div>

            <div class="col-2">
                <p>{{amount}}</p>
            </div>

            <div class="col-2 my-3">
                {{#each buttons}}
                {{#if isPrimary}}
                <button class="btn btn-primary my-2">{{text}}</button>
                {{/if}}
                {{#if isDanger}}
                <button class="btn btn-outline-danger">{{text}}</button>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    {{/each}}
</div>