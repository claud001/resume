<main>
    <div class="card mb-5">
        <div class="card-body">
            {{#with navigation}}
            <div class="nav">
                {{#each links}}
                <div class="nav-item">
                    {{#if href}}
                    <a class="nav-link" href="{{href}}">{{text}}</a>
                    {{else}}
                    <a class="nav-link disabled" href="{{link}}">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </div>
    <h1>{{header}}</h1>

    {{#with purchase}}
    <div class="nav nav-tabs mt-3 mb-4">
        {{#each tabs}}
        <div class="nav-item">
            <span class="nav-link">{{this}}</span>
        </div>
        {{/each}}
    </div>
    {{#with actionBlock}}
    <div class="row">
        <div class="col-4">
            <input class="form-control" placeholder="{{input.placeholder}}">
        </div>
        <div class="col-8">
            {{#each buttons}}
            {{#if isSuccess}}
            <a class="btn btn-success" href="{{link}}">{{text}}</a>
            {{/if}}
            {{#if isOutline}}
            <a class="btn btn-outline-success" href="{{link}}">{{text}}</a>
            {{/if}}
            {{#if isDanger}}
            <a class="btn btn-outline-danger" href="{{link}}">{{text}}</a>
            {{/if}}
            {{/each}}
        </div>
        {{/with}}
        <hr class="my-4">

        {{> purchaseItem}}

        {{/with}}
        <hr class="my-4">
        {{#with userInfo}}
        <h2 class="my-5">{{title}}</h2>
        <div class="card">
            {{#with profileData}}
            <div class="card-title">
                <h3 class="my-3">{{title}}</h3>
                <div class="card col-12 p-2 py-0">
                    <div class="row">
                        {{#with fullName}}
                        <div class="card-body col-4">
                            <div>{{surname.title}}</div>
                            <h5>{{surname.value}}</h5>
                        </div>
                        <div class="card-body col-4">
                            <div>{{name.title}}</div>
                            <h5>{{name.value}}</h5>
                        </div>
                        <div class="card-body col-4">
                            <div>{{middleName.title}}</div>
                            <h5>{{middleName.value}}</h5>
                        </div>
                        {{/with}}
                    </div>
                </div>
                <div class="card col-12 p-2 py-0 my-4">
                    <div class="row">
                        {{#with otherInfo}}
                        <div class="card-body col-4">
                            <div>{{birthday.title}}</div>
                            <h5>{{birthday.value}}</h5>
                        </div>
                        <div class="card-body col-4">
                            <div>{{sex.title}}</div>
                            <h5>{{sex.value}}</h5>
                        </div>
                        <div class="card-body col-4">
                            <div>{{language.title}}</div>
                            <h5>{{language.value}}</h5>
                        </div>
                        {{/with}}
                    </div>
                </div>
                <div class="card col-12 p-1 py-0">
                    <div class="row">
                        {{#each ../buttons}}
                        <div class="card-body col-4">
                            {{#if isPrimary}}
                            <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                            {{/if}}
                            {{#if isSecondary}}
                            <a class="btn btn-outline-secondary" href="{{link}}">{{text}}</a>
                            {{/if}}
                            {{#if isDanger}}
                            <a class="btn btn-outline-danger" href="{{link}}">{{text}}</a>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
        <div class="card my-3 p-4">
            {{#with recipients}}
            <h3>{{title}}</h3>
            <div class="row">
                {{#each users}}
                <div class="card col-4 p-2">
                    <div>{{name}}</div>
                    <div>{{phone}}</div>
                    <a class="btn btn-primary mt-3" href="{{button.link}}">{{button.text}}</a>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        <div class="card my-3 p-4">
            {{#with contacts}}
            <h3>{{title}}</h3>
            <div class="row">
                {{#each contactData}}
                <div class="card col-4 p-2">
                    <div>{{title}}</div>
                    <h5>{{value}}</h5>
                    <div>
                        {{#if button.isPrimary}}
                        <a class="btn btn-primary mt-3" href="{{button.link}}">{{button.text}}</a>
                        {{/if}}
                    </div>
                    <div> {{#if button.isSecondary}}
                        <a class="btn btn-outline-secondary mt-3" href="{{button.link}}">{{button.text}}</a>
                        {{/if}}
                    </div>
                    <div>
                        {{#if button.isDanger}}
                        <a class="btn btn-outline-danger mt-3" href="{{button.link}}">{{button.text}}</a>
                        {{/if}}
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        {{/with}}
        <hr class="my-4">
        <div class="row">
            {{#each footer}}
            <div class="nav col-2">
                <div>
                    {{#each this}}
                    <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{this.link}}">{{this.text}}</a>
                    {{/each}}
                </div>
            </div>
            {{/each}}
        </div>
</main>